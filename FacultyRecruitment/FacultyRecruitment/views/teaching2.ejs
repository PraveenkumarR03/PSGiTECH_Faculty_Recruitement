          <script>
              document.addEventListener('DOMContentLoaded', function() {
                  const publicationForm = document.getElementById('publicationForm');
                  const publicationsContainer = document.getElementById('publications');
                  const addPublicationButton = document.getElementById('addPublication');
                  let publicationCount = 0;
                  
                  // Function to add a new publication input fields
                  function addPublicationInput() {
                      publicationCount++;
                      const newPublicationGroup = document.createElement('div');
                      newPublicationGroup.classList.add('publication-group');
                      newPublicationGroup.innerHTML = ` <br>
                      <label for="Publisher${publicationCount}">Publisher:</label><br>
                          <input type="text" id="Publisher${publicationCount}" name="Publisher" placeholder="Publisher"><br>

                          <label for="Title${publicationCount}">Title:</label><br>
                          <input type="text" id="Title${publicationCount}" name="Title" placeholder="Title"><br>

                          <label for="coAuthors${publicationCount}">Co-authors:</label><br>
                          <input type="text" id="coAuthors${publicationCount}" name="coAuthors" placeholder="Co-authors"><br>
                          
                          <label for="year${publicationCount}">Year of Publication:</label><br>
                          <input type="text" id="year${publicationCount}" name="year" placeholder="Year"><br>
                          
                          <button type="button" class="remove-publication">Remove</button>
                      `;
                      publicationsContainer.appendChild(newPublicationGroup);
      
                      // Add event listener for the remove button in the new publication group
                      const removePublicationButton = newPublicationGroup.querySelector('.remove-publication');
                      removePublicationButton.addEventListener('click', function() {
                          publicationsContainer.removeChild(newPublicationGroup);
                      });
                  }
                  
                  // Event listener for the add publication button
                  addPublicationButton.addEventListener('click', function() {
                      addPublicationInput();
                  });
              });
          </script>
