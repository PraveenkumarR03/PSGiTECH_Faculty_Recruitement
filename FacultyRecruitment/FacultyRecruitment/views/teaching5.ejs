                <button type="button" id="addReference">Add Reference</button><br>
                
        
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const referencesForm = document.getElementById('referencesForm');
                    const referencesContainer = document.getElementById('references');
                    const addReferenceButton = document.getElementById('addReference');
                    let referenceCount = 0;
                    
                    // Function to add a new reference input fields
                    function addReferenceInput() {
                        referenceCount++;
                        const newReferenceGroup = document.createElement('div');
                        newReferenceGroup.classList.add('reference-group');
                        newReferenceGroup.innerHTML = `<br>
                            <label for="name${referenceCount}">Name:</label><br>
                            <input type="text" id="name${referenceCount}" name="name" placeholder="Name"><br>
                            
                            <label for="designation${referenceCount}">Designation:</label><br>
                            <input type="text" id="designation${referenceCount}" name="designationref" placeholder="Designation"><br>
                            
                            <label for="organization${referenceCount}">Organization:</label><br>
                            <input type="text" id="organization${referenceCount}" name="organization" placeholder="Organization"><br>
                            
                            <label for="mobile${referenceCount}">Mobile No.:</label><br>
                            <input type="text" id="mobile${referenceCount}" name="mobile" placeholder="Mobile No."><br>
                            
                            <button type="button" class="remove-reference">Remove</button>
                        `;
                        referencesContainer.appendChild(newReferenceGroup);
        
                        // Add event listener for the remove button in the new reference group
                        const removeReferenceButton = newReferenceGroup.querySelector('.remove-reference');
                        removeReferenceButton.addEventListener('click', function() {
                            referencesContainer.removeChild(newReferenceGroup);
                        });
                    }
                    
                    // Event listener for the add reference button
                    addReferenceButton.addEventListener('click', function() {
                        addReferenceInput();
                    });
                });
            </script>
