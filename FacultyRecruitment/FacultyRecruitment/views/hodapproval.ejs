<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="assets/css/style.css" rel="stylesheet">
    <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Register</title>
  <meta content="" name="description">
  <meta content="" name="keywords">


  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Raleway:300,400,500,700,800" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="assets/vendor/aos/aos.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="assets/css/style.css" rel="stylesheet">
  <link rel="shortcut icon" type="image/x-icon" href="assets/img/PSGiTech Logo.png">

    <title>HR Approval</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
        }
        table {
            border-collapse: collapse;
            width: 80%;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .actions {
            text-align: center;
        }
        .actions button {
            padding: 8px 16px;
            margin: 4px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }
        .actions button:hover {
            background-color: #45a049;
        }
    
        /* Responsive Styling */
        @media screen and (max-width: 768px) {
            table {
                width: 100%;
            }
            th, td {
                padding: 8px;
            }
            .actions button {
                padding: 6px 12px;
            }
            .navbar {
                flex-direction: column;
                align-items: center;
            }
            .navbar img {
                margin-bottom: 10px; /* Add some space between logo and text */
            }
        }
    </style>
    
</head>
<body>
  <header id="header" class="d-flex align-items-center header-inner ">
    <div class="container-fluid container-xxl d-flex align-items-center">

      <div id="logo" class="me-auto" style="    display: flex;justify-content: flex-start;gap: 10px;">
        <!-- Uncomment below if you prefer to use a text logo -->
         <a href="/recruitment" class=""><img src="assets/img/psg.png" alt="" title=""></a>
         <h1 style="text-transform: none;"><a href="/recruitment">PSG<span> iTech</span></a></h1>
        
      </div>
      <nav id="navbar" class="navbar order-last order-lg-0">
        <ul>
            <li><a class="nav-link scrollto active" href="/recruitment">Home</a></li>
            <li><a class="nav-link scrollto" href="/recruitment/profile">Profile</a></li>
            <%if(user){%>
                <%if(user.accountType=="hr"){%>
                    <li><a class="nav-link scrollto" href="/recruitment/approval">HR Approval</a></li>
                <%}else if(user.accountType=="hod"){%>
                    <li><a class="nav-link scrollto" href="/recruitment/hodapproval">Hod Approval</a></li>
                <%}else if(user.accountType=="admin"){%>
                    <li><a class="nav-link scrollto" href="/recruitment/approval">HR Approval</a></li>
                    <li><a class="nav-link scrollto" href="/recruitment/hodapproval">Hod Approval</a></li>
                <%}%>
                
            <%}%>
          </ul>
          <i class="bi bi-list mobile-nav-toggle"></i>

        </nav>
        <%if(user){%> 
        <a class="buy-tickets scrollto" href="/recruitment/logout">Logout</a>

    <%}
    else{%>
        <a class="buy-tickets scrollto" href="/recruitment/login">Login</a>
    <%}%>
    </div>
  </header><!-- End Header -->
  <div class="ProcessedApplications" style="padding-top: 50px;">
    <div class="section-header">
        <h1>Processed Applications</h1>
    </div>
    <% if (acceptedApplications.length > 0 || supacceptedApplications.length >0) { %>
        <table >
            <thead>
                <tr>
                    <th>Application Number</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                <% acceptedApplications.forEach(app => { %>
                    <tr>
                    <td><%= app.uid %></td>
                    <td><%= app.name %></td>
                    <td><%= app.applytype %></td>
                    <td><%= app.position %></td>
                    <td><%= app.department %></td>
                    <td><%= app.status %></td>
                    <td class="actions">
                    <a href="/recruitment/hrview/<%= app.uid %>" >
                        <button type="submit">view</button>
                    </a>
                    </td>
                    </tr>
                <% }) %>
                <% supacceptedApplications.forEach(app => { %>
                    <tr>
                    <td><%= app.uid %></td>
                    <td><%= app.name %></td>
                    <td><%= app.applytype %></td>
                    <td><%= app.position %></td>
                    <td><%= app.department %></td>
                    <td><%= app.status %></td>
                    <td class="actions">
                    <a href="/recruitment/hrview/<%= app.uid %>" >
                        <button type="submit">view</button>
                    </a>
                    </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
    </div>
    <div class="ProcessedApplications" >
        <div class="section-header">
            <h1>HOD Approval</h1>
        </div>

    <table>
        <thead>
            <tr>
                <th>Application Number</th>
                <th>Name</th>
                <th>Type</th>
                <th>Designation</th>
                <th>Department</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% applications.forEach(app => { %>
                <tr>
                    <td><%= app.uid %></td>
                    <td><%= app.name %></td>
                    <td><%= app.applytype %></td>
                    <td><%= app.position %></td>
                    <td><%= app.department %></td>
                    <td><%= app.status %></td>
                    <td class="actions">
                        <% if (app.status === 'Accepted By HR') { %>
                            <form action="/recruitment/hodaccept/<%= app.uid %>" method="post">
                                <button type="submit">Accept</button>
                            </form>
                            <form action="/recruitment/hodreject/<%= app.uid %>" method="post">
                                <button type="submit">Reject</button>
                            </form>
                            <a href="/recruitment/hrview/<%= app.uid %>" >
                                <button type="submit">view</button>
                            </a>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
            <% supapplications.forEach(app => { %>
                <tr>
                    <td><%= app.uid %></td>
                    <td><%= app.name %></td>
                    <td><%= app.applytype %></td>
                    <td><%= app.position %></td>
                    <td><%= app.department %></td>
                    <td><%= app.status %></td>
                    <td class="actions">
                        <% if (app.status === 'Accepted By HR') { %>
                            <form action="/recruitment/hodaccept/<%= app.uid %>" method="post">
                                <button type="submit">Accept</button>
                            </form>
                            <form action="/recruitment/hodreject/<%= app.uid %>" method="post">
                                <button type="submit">Reject</button>
                            </form>
                            <a href="/recruitment/hrview/<%= app.uid %>" >
                                <button type="submit">view</button>
                            </a>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
</body>
</html>