                let languageCount = 0;
                
                // Function to add a new language input field
                function addLanguageInput() {
                    languageCount++;
                    const newLanguageGroup = document.createElement('div');
                    newLanguageGroup.classList.add('language-group');
                    newLanguageGroup.innerHTML = `
                        
                        <input type="text" id="languageKnown${languageCount}" name="languageKnown"><br>
                        <input type="checkbox" id="reading${languageCount}" name="reading${languageCount}">
                        <label for="reading${languageCount}">Read</label>
                        
                        <input type="checkbox" id="speaking${languageCount}" name="speaking${languageCount}">
                        <label for="speaking${languageCount}">Speak</label>
                        
                        <input type="checkbox" id="writing${languageCount}" name="writing${languageCount}">
                        <label for="writing${languageCount}">Write</label><br>
                        
                        <button type="button" class="remove-language">-</button>
                        
                        
                    `;
                    languagesContainer.appendChild(newLanguageGroup);
    
                    // Add event listener for the remove button in the new language group
                    const removeLanguageButton = newLanguageGroup.querySelector('.remove-language');
                    removeLanguageButton.addEventListener('click', function() {
                        languagesContainer.removeChild(newLanguageGroup);
                    });
                }
                
                // Event listener for the add language button
                addLanguageButton.addEventListener('click', function() {
                    addLanguageInput();
                });
            });
